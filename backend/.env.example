# Environment Configuration Example
# Copy this file to .env.production and update values

# Environment
ENVIRONMENT=production

# Database Configuration
POSTGRES_USER=career_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=career_copilot
DATABASE_URL=postgresql://career_user:change_this_password@localhost:5432/career_copilot

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=generate_a_strong_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@career-copilot.com

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Web Scraping Settings
SCRAPING_ENABLED=true
SCRAPING_RATE_LIMIT_MIN=2.0
SCRAPING_RATE_LIMIT_MAX=5.0
SCRAPING_MAX_RESULTS_PER_SITE=25

# AI Services (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=