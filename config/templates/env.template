# Environment Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEVELOPMENT_MODE=true
PRODUCTION_MODE=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8002
API_DEBUG=false
FRONTEND_PORT=8501

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1

# Groq Configuration (Optional - Fast inference)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
GROQ_ENABLED=true

# LangSmith Configuration (Optional - AI tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=contract-analyzer
LANGSMITH_TRACING=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/contract_analyzer.db
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=contract_embeddings

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
ENABLE_REDIS_CACHING=false

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# DocuSign Configuration (Optional)
DOCUSIGN_CLIENT_ID=your_docusign_client_id_here
DOCUSIGN_CLIENT_SECRET=your_docusign_client_secret_here
DOCUSIGN_REDIRECT_URI=http://localhost:8000/auth/docusign/callback
DOCUSIGN_ENABLED=false
DOCUSIGN_SANDBOX_ENABLED=true

# Google Drive Configuration (Optional)
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret_here
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_DRIVE_ENABLED=false

# Gmail Configuration (Optional)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:8000/auth/gmail/callback
GMAIL_ENABLED=false

# SMTP Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_ENABLED=false

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_DEFAULT_CHANNEL=#contracts
SLACK_ENABLED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
MASTER_API_KEY=your_master_api_key_here
CLIENT_API_KEYS=client1:key1,client2:key2
DISABLE_AUTH=false

# File Security
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt
SCAN_UPLOADED_FILES=true

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://localhost:8502

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_MONITORING=true
ENABLE_PROMETHEUS=true
ENABLE_OPENTELEMETRY=false

# Metrics Configuration
METRICS_PORT=9090
JAEGER_ENDPOINT=
OTLP_ENDPOINT=

# Security Monitoring
ENABLE_AUDIT_LOGGING=true
SECURITY_ALERT_WEBHOOK=
AUDIT_LOG_FILE=./logs/audit.log

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
API_WORKERS=1
API_TIMEOUT=300
MAX_REQUEST_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Background Tasks
BACKGROUND_TASKS_ENABLED=true
BACKGROUND_TASKS_MAX_WORKERS=2

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_OPTIMIZATIONS=true
FEATURE_ERROR_RECOVERY=true
FEATURE_PERFORMANCE_MONITORING=false
FEATURE_BETA_FEATURES=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# These settings are only used in development mode

# Hot Reload
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=false

# Debug Settings
DEBUG_TOOLBAR=false
PROFILING=false
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# These settings are only used in production mode

# SSL Configuration
SSL_REQUIRED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90
BACKUP_FREQUENCY_HOURS=24

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_CORES=4
MAX_DISK_GB=100

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# These settings are used when running with Docker

# Container Ports
CONTAINER_API_PORT=8002
CONTAINER_FRONTEND_PORT=8501
CONTAINER_REDIS_PORT=6379
CONTAINER_PROMETHEUS_PORT=9090

# Volume Mounts
DATA_VOLUME=./data
LOGS_VOLUME=./logs
CONFIG_VOLUME=./config

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. For production, ensure all security-related settings are properly configured
# 3. Enable only the external services you plan to use
# 4. Adjust resource limits based on your deployment environment
# 5. Consider using environment-specific .env files (.env.development, .env.production)