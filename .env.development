# =============================================================================
# Career Copilot - Development Environment Configuration
# =============================================================================

# Application Settings (Required)
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8002

# Database Configuration (Required)
DATABASE_URL=sqlite:///./data/career_copilot.db

# Authentication & Security (Required)
JWT_SECRET_KEY=development-secret-key-min-32-chars-change-in-prod
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration (Required)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Rate Limiting (Required)
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Logging Configuration (Required)
LOG_LEVEL=DEBUG

# Job Board API Configuration (Required)
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key

LINKEDIN_API_CLIENT_ID=your_linkedin_client_id
LINKEDIN_API_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# AI Service Configuration (Required)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-8b-instant
GROQ_ENABLED=true

ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
GEMINI_API_KEY=your_gemini_api_key

# Vector Database Configuration (Required)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=job_embeddings

# Job Processing Configuration (Required)
MAX_JOBS_PER_FETCH=100
JOB_REFRESH_INTERVAL_HOURS=24
JOB_RETENTION_DAYS=30

# Development-specific settings
ENABLE_API_DOCS=true
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_SERVICES=false