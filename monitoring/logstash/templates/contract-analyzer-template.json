{
  "index_patterns": ["contract-analyzer-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "index.refresh_interval": "5s",
    "index.lifecycle.name": "contract-analyzer-policy",
    "index.lifecycle.rollover_alias": "contract-analyzer-logs"
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "level": {
        "type": "keyword"
      },
      "message": {
        "type": "text",
        "analyzer": "standard"
      },
      "service": {
        "type": "keyword"
      },
      "environment": {
        "type": "keyword"
      },
      "host": {
        "type": "keyword"
      },
      "correlation_id": {
        "type": "keyword"
      },
      "trace_id": {
        "type": "keyword"
      },
      "user_id": {
        "type": "keyword"
      },
      "request_id": {
        "type": "keyword"
      },
      "method": {
        "type": "keyword"
      },
      "endpoint": {
        "type": "keyword"
      },
      "status_code": {
        "type": "integer"
      },
      "response_time": {
        "type": "float"
      },
      "request_time": {
        "type": "float"
      },
      "clientip": {
        "type": "ip"
      },
      "user_agent": {
        "properties": {
          "original": {
            "type": "text"
          },
          "device": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          },
          "os": {
            "type": "keyword"
          },
          "version": {
            "type": "keyword"
          }
        }
      },
      "geoip": {
        "properties": {
          "country_name": {
            "type": "keyword"
          },
          "city_name": {
            "type": "keyword"
          },
          "location": {
            "type": "geo_point"
          }
        }
      },
      "error": {
        "properties": {
          "type": {
            "type": "keyword"
          },
          "message": {
            "type": "text"
          },
          "stack_trace": {
            "type": "text"
          }
        }
      },
      "business_metrics": {
        "properties": {
          "contract_id": {
            "type": "keyword"
          },
          "contract_type": {
            "type": "keyword"
          },
          "processing_duration": {
            "type": "float"
          },
          "ai_confidence": {
            "type": "float"
          }
        }
      }
    }
  }
}