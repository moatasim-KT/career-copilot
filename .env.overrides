# =============================================================================
# Environment-Specific Configuration Overrides
# =============================================================================
# This file defines environment-specific overrides for the unified .env file
# The configuration loader will apply these based on the ENVIRONMENT variable
# =============================================================================

[development]
# Development environment overrides
DEBUG=true
LOG_LEVEL=DEBUG
CORS_ORIGINS=http://localhost:8501,http://localhost:3000,http://localhost:8502,http://localhost:8503,http://127.0.0.1:8501,http://127.0.0.1:8502,http://127.0.0.1:8503,http://127.0.0.1:3000
JWT_EXPIRATION_HOURS=168
RATE_LIMIT_ENABLED=false
OPENAI_MODEL=gpt-3.5-turbo
GROQ_MODEL=llama-3.1-8b-instant
ANTHROPIC_MODEL=claude-3-sonnet-20240229
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=job_embeddings
MAX_JOBS_PER_FETCH=100
JOB_REFRESH_INTERVAL_HOURS=24
JOB_RETENTION_DAYS=30
ENABLE_API_DOCS=true
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_SERVICES=false

[production]
# Production environment overrides
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json
CORS_ORIGINS=https://career-copilot.com,https://api.career-copilot.com
JWT_SECRET_KEY=replace-with-secure-production-key-min-32-chars
JWT_EXPIRATION_HOURS=24
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=30
DATABASE_URL=postgresql://user:password@localhost:5432/career_copilot
DB_MAX_CONNECTIONS=20
DB_TIMEOUT=30
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ADZUNA_APP_ID=production_adzuna_app_id
ADZUNA_APP_KEY=production_adzuna_app_key
LINKEDIN_API_CLIENT_ID=production_linkedin_client_id
LINKEDIN_API_CLIENT_SECRET=production_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=production_linkedin_access_token
OPENAI_API_KEY=production_openai_api_key
OPENAI_MODEL=gpt-4
GROQ_API_KEY=production_groq_api_key
GROQ_MODEL=mixtral-8x7b-32768
ANTHROPIC_API_KEY=production_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229
GEMINI_API_KEY=production_gemini_api_key
CHROMA_PERSIST_DIRECTORY=/data/chroma
CHROMA_COLLECTION_NAME=job_embeddings_prod
MAX_JOBS_PER_FETCH=200
JOB_REFRESH_INTERVAL_HOURS=12
JOB_RETENTION_DAYS=90
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_USAGE_ANALYTICS=true

[testing]
# Testing environment overrides
DEBUG=true
LOG_LEVEL=WARNING
DATABASE_URL=sqlite:///./data/test.db
JWT_SECRET_KEY=testing-secret-key-min-32-chars-for-tests
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
RATE_LIMIT_ENABLED=false
API_HOST=127.0.0.1