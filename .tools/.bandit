[bandit]
exclude_dirs = [
    "tests",
    "migrations", 
    ".venv",
    "venv",
    "env",
    "build",
    "dist",
    ".git",
    "__pycache__",
    ".pytest_cache",
    ".mypy_cache",
    ".coverage",
    "htmlcov"
]

# Skip certain tests
skips = [
    "B101",  # assert_used - Allow assert statements in tests
    "B601",  # paramiko_calls - Allow paramiko usage
    "B602",  # subprocess_popen_with_shell_equals_true - Allow shell=True in specific cases
]

# Test-specific skips
[bandit.assert_used]
skips = ["*_test.py", "test_*.py", "tests/*"]

# Confidence levels: LOW, MEDIUM, HIGH
confidence = "MEDIUM"

# Severity levels: LOW, MEDIUM, HIGH  
severity = "MEDIUM"

# Output format: csv, json, txt, xml, yaml
format = "json"

# Output file
output = "bandit-report.json"