[flake8]
max-line-length = 88
max-complexity = 10
ignore = 
    E203,  # Whitespace before ':' (conflicts with black)
    W503,  # Line break before binary operator (conflicts with black)
    E501,  # Line too long (handled by black)
    D100,  # Missing docstring in public module
    D104,  # Missing docstring in public package
    D107,  # Missing docstring in __init__

per-file-ignores =
    __init__.py:F401,D104
    tests/*:S101,S106,D100,D103
    migrations/*:E501,D100,D103
    scripts/*:T20

select = 
    E,     # pycodestyle errors
    W,     # pycodestyle warnings
    F,     # pyflakes
    C90,   # mccabe complexity
    I,     # isort (via flake8-import-order)
    D,     # pydocstyle (via flake8-docstrings)
    B,     # flake8-bugbear
    S,     # bandit security (via flake8-bandit)

docstring-convention = google
import-order-style = google

exclude =
    .git,
    __pycache__,
    .venv,
    .env,
    venv,
    env,
    ENV,
    env.bak,
    venv.bak,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.py,cover,
    .hypothesis,
    .pytest_cache,
    migrations,
    build,
    dist,
    *.egg-info

# Complexity settings
max-cognitive-complexity = 10

# Import order settings
application-import-names = app,career_copilot
application-package-names = app,career_copilot

[flake8:local-plugins]
extension =
    B029 = backend.app.services.cloud_storage_manager:B029
    B030 = backend.app.services.cloud_storage_service:B030
    B031 = backend.app.services.file_storage_service:B031
    B032 = backend.app.services.google_drive_service:B032
    B033 = backend.app.services.local_storage_service:B033